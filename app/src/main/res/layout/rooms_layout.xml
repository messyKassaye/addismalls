<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/top_sellers_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/card_album_radius"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/roo_photo"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/room_description_and_title"
            android:layout_below="@+id/roo_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/room_title"
                android:textColor="@color/blue_textcolor"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/room_description"
                android:textColor="@color/white_textcolor"
                android:gravity="left"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:maxLines="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@id/room_description_and_title"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/room_price"
                    android:textColor="@color/white_textcolor"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <Button
                android:id="@+id/room_details"
                android:layout_alignParentRight="true"
                android:text="Room details"
                android:textColor="@color/white_textcolor"
                android:background="@drawable/button_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>