<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <TextView
         android:id="@+id/dishe_success"
         android:textColor="@color/white_textcolor"
         android:textSize="20sp"
         android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dish_name_success"
        android:gravity="center"
        android:textColor="@color/blue_textcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dish_price_success"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/blue_textcolor"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dish_description_success"
        android:gravity="center"
        android:textColor="@color/blue_textcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>