<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.red.magazine.agents.companyAgent.fragments.CompanyAgentRegisterMalls">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:orientation="vertical"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <EditText
           android:id="@+id/sign_in_tin_no"
           android:textColor="@color/white_textcolor"
           android:textCursorDrawable="@null"
           android:paddingLeft="15dp"
           android:hint="Enter company tin no"
           android:textColorHint="@color/hint_color"
           android:background="@drawable/text_field"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <EditText
           android:id="@+id/company_name"
           android:textColor="@color/white_textcolor"
           android:textCursorDrawable="@null"
           android:paddingLeft="15dp"
           android:hint="Enter company tin no"
           android:textColorHint="@color/hint_color"
           android:background="@drawable/text_field"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <Spinner
           android:id="@+id/company_type"
           android:layout_centerHorizontal="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"></Spinner>


   </LinearLayout>


</FrameLayout>
