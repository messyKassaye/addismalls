<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/toolbar"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.red.magazine.malls.ui.VacancyActivity"
    tools:showIn="@layout/activity_vacancy">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/vacancy_detail_category"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancy_detail_salary"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancy_detail_employment_type"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vacancy_detail_educational_level"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancy_detail_year_exp"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vacancy_detail_deadline"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/blue_textcolor"
            android:text="How to apply"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vacancy_detail_description"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/blue_textcolor"
            android:text="Contact detail about the company"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vacancy_detail_phone_no"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vacancy_detail_company_name"
            android:layout_margin="5dp"
            android:textColor="@color/white_textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
          <Button
              android:id="@+id/back_to_main"
              android:background="@drawable/button_normal"
              android:textColor="@color/white_textcolor"
              android:text="Back"
              android:layout_margin="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>